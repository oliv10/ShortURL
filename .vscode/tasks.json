{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "python3 -m pip install ."
        },
        {
            "label": "test",
            "type": "process",
            "command": "pytest",
            "problemMatcher": [],
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "pipreqs",
            "type": "shell",
            "command": "pipreqs ./src --savepath ./requirements.txt --mode compat --force",
            "problemMatcher": []
        }
    ]
}